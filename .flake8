[flake8]
max-line-length = 130
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .env,
    ephe,
    *.egg-info,
    data,
    charts
ignore = 
    E203,
    W503,
    W293,
    W291,
    D100,
    D101,
    D102,
    D103,
    D104,
    D200,
    D204,
    D205,
    D400,
    D401,
    F401,
    F841,
    E302
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
